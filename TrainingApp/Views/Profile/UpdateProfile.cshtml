@model TrainingApp.Models.UserProfileVM

<h2>Edit Profile for @ViewBag.UserName</h2>

<form asp-controller="Profile" asp-action="UpdateProfile" method="post">
    <div class="form-group">
        <label asp-for="FirstName">* First name</label>
        <input asp-for="FirstName" class="form-control" required/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName">* Last name</label>
        <input asp-for="LastName" class="form-control" required/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Goals">Goals</label>
        <textarea asp-for="Goals" class="form-control"></textarea>
        <span asp-validation-for="Goals" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weight">Weight: (kg)</label>
        <input asp-for="Weight" class="form-control"></input>
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Height">Height: (cm)</label>
        <input asp-for="Height" class="form-control"></input>
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>

    <!-- Add other form fields as needed -->

    <button type="submit" class="btn btn-primary mt-4">Save Changes</button>
</form>